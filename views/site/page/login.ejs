
<div id="sign-up-in" class="sign-up-in-modal col-md-6 m-auto">
  <%- include ("../partials/messages.ejs") %>
  <form action="/users/login" class="modal-content" method="POST">
    <div class="container">
      <h1>Đăng nhập</h1>
      <!-- <p>Vui lòng điền thông tin để đăng ký tài khoản</p> -->
      <hr />
      <label for="email"><b>Email</b></label>
      <input type="name" placeholder="Hãy nhập Email" name="email" required />
      <label for="password"><b>Mật khẩu</b></label>
      <input
        type="password"
        placeholder="Hãy nhập mật khẩu"
        name="password"
        required
      />
      <label for="password2"><b>Nhập lại mật khẩu</b></label>
      <input
        type="password"
        placeholder="Hãy nhập lại mật khẩu"
        name="password2"
        required
      />
      <label>
        <input type="checkbox" name="remember" id="remember" />Ghi nhớ
      </label>
      <!-- s -->
      <button type="submit" class="signinbtn">Đăng nhập</button>
    </div>
  </form>
  <p class="lead mt-4">Chưa có tài khoản?</p>
  <a href="/users/login">Đăng ký</a>
</div>
